<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">IP</th>
        <th scope="col">Model</th>
        <th scope="col">Multifunctional</th>
        <th scope="col">Area</th>
        <th scope="col">Location</th>
        <th scope="col text-center">Managing</th>

    </tr>
    </thead>
<!--    @todo add sticky table head and content should be scrollable.-->
    <tbody>
   {{#each printers}}

    <tr>

        <td>{{this.title}}</td>
        <td>{{this.ip}}</td>
        <td>{{this.model}}</td>
        <td>{{this.isMultifunctional}}</td>
        <td>{{this.area}}</td>
        <td>{{this.location}}</td>
        <td>
<!--            @todo implement features which are related to routes below-->
            <a href="/printers/{{this.id}}" class="btn btn-primary">Supply</a>
            <a href="/supply-printer/{{this.id}}" class="btn btn-warning">Modify</a>
            <a href="/supply-printer/{{this.id}}" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>